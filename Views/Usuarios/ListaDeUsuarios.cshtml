@model List<Usuario>

<h1>Usuários cadastrados no sistema</h1>

<p class="text-danger">@ViewData["Mensagem"]</p>

<table class="table">
    <thead>
        <tr>
            <th scope="row">Nome</th>
            <th scope="row">Login</th>
            <th scope="row">Tipo</th>
            <th scope="row">Operação</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Usuario u in Model)
        {
            <tr>
                <td>@u.Nome</td>
                <td>@u.Login</td>
                @if(u.Tipo == Usuario.ADMIN){
                    <td>Administrador</td>
                    <td><a href="/Usuarios/EditarUsuario?id=@u.Id">Editar</a> | <a href="/Usuarios/ExcluirUsuario?id=@u.Id">Excluir</a></td>
                }else{
                    <td>Padrão</td>
                    <td><a href="/Usuarios/EditarUsuario?id=@u.Id">Editar</a> | <a href="/Usuarios/ExcluirUsuario?id=@u.Id">Excluir</a></td>
                }
            </tr>
        }
    </tbody>
</table>

<a href="RegistrarUsuarios">Registrar novo usuário</a>